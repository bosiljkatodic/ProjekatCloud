@model Common.LoginViewModel

<h2>Prijavljivanje</h2>
<hr />

@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" name="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Password">Lozinka</label>
        <input asp-for="Password" name="Password" type="password" class="form-control" />
        <span asp-validation-for="Lozinka" class="text-danger"></span>
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Prijavi se</button>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
